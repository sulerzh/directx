<?xml version="1.0" encoding="utf-8"?>
<Theme xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://microsoft.data.visualization.engine.Theme/1.0">
  
  <!-- Modern -->

<!-- Default directional light -->
  <Lighting>
    <DirectionalLightPosition>
      <X>-.25</X>
      <Y>.5</Y>
      <Z>-1</Z>
    </DirectionalLightPosition>
    <PointLightPosition>
      <X>.25</X>
      <Y>-.5</Y>
      <Z>-.5</Z>
    </PointLightPosition>
    <PointLightAttenuationFactor>0.001</PointLightAttenuationFactor>
    <AmbientLightFactor>0.5</AmbientLightFactor>
    <SecondaryAmbientLightFactor>.5</SecondaryAmbientLightFactor>
    <DirectionalLightFactor>0.9</DirectionalLightFactor>
    <PointLightFactor>0.5</PointLightFactor>
  </Lighting>
  
  <!-- Background color is a linear gradient (top to bottom): RGB 177/193/200 to RGB 209/228/236 -->
  <BackgroundTopColor>
    <R>0.223529</R>
    <G>0.223529</G>
    <B>0.223529</B>
    <A>1</A>
  </BackgroundTopColor>
  <BackgroundBottomColor>
    <R>0.019608</R>
    <G>0.019608</G>
    <B>0.019608</B>
    <A>1</A>
  </BackgroundBottomColor>
    
  <GlobeGlowEnabled>true</GlobeGlowEnabled>
  <GlobeGlowColor>
    <R>1</R>
    <G>1</G>
    <B>1</B>
    <A>1</A>
  </GlobeGlowColor>
  <GlobeGlowReflectanceIndex>0.001</GlobeGlowReflectanceIndex>
  <GlobeGlowPower>11</GlobeGlowPower>
  <GlobeGlowFactor>0.8</GlobeGlowFactor>
  
  <!-- Globe treatment -->
  <ColorOperations>

    <ColorReplace>
      <Source>
        <!-- Water color -->
        <R>0.725490</R>
        <G>0.811765</G>
        <B>0.921569</B>
        <A>1</A>
      </Source>
      <Destination>
        <R>0.5</R>
        <G>0.5</G>
        <B>0.5</B>
        <A>1</A>
      </Destination>
    </ColorReplace>

    <SaturationTransform>
      <Saturation>0.0</Saturation>
    </SaturationTransform>
    
    <!-- Midnight Blue Curves settings -->

  </ColorOperations>

  <!-- Annotation gradient colors-->
  
  <AnnotationTopColor>
    <R>0.9725</R>
    <G>0.7255</G>
    <B>0.3569</B>
    <A>1</A>
  </AnnotationTopColor>
  <AnnotationBottomColor>
    <R>0.9647</R>
    <G>0.6549</G>
    <B>0.3020</B>
    <A>1</A>
  </AnnotationBottomColor>

  <!-- Shadow Color -->

  <ShadowColor>
    <R>0</R>
    <G>0</G>
    <B>0</B>
    <A>0.2</A>
  </ShadowColor>

  <!-- Outline parameters -->
  <LayerParameters>
    <InnerOutlineColor>
      <R>1</R>
      <G>1</G>
      <B>1</B>
      <A>1</A>
    </InnerOutlineColor>
    <OuterOutlineColor>
      <R>0</R>
      <G>0</G>
      <B>0</B>
      <A>1</A>
    </OuterOutlineColor>
    <OutlineWidth>2</OutlineWidth>
    <OutlineOffset>0</OutlineOffset>
  </LayerParameters>

  <!-- Data Color Steps, Orange first in SoDo order -->
<ColorsForVisuals>
    <Color>
      <R>0.988235</R>
      <G>0.109804</G>
      <B>0.066667</B>
      <A>1</A>
    </Color>
