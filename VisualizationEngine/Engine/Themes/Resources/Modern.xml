      <A>1</A>
    </Color>
   <Color>
      <R>0.764706</R>
      <G>0.066667</G>
      <B>0.960784</B>
      <A>1</A>
    </Color>
  </ColorsForVisuals>
  <ColorStepsForVisuals>
    <Step> 1.0 </Step>
    <Step> 1.5 </Step>
    <Step> 0.84 </Step>
    <Step> 1.32 </Step>
    <Step> 0.76 </Step>
    <Step> 1.08 </Step>
    <Step> 0.52 </Step>
    <Step> 1.16 </Step>
    <Step> 0.68 </Step>
    <Step> 1.32 </Step>
    <Step> 0.92 </Step>
